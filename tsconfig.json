{
  "compilerOptions": {
    "target": "es2020" /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */,
    "module": "commonjs" /* Specify what module code is generated. */,
    "rootDir": "./src" /* Allow multiple folders to be treated as one when resolving modules. */,
    "outDir": "./dist" /* Specify an output folder for all emitted files. */,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ] /* Specify multiple folders that act like './node_modules/@types'. */,
    "strict": true, // enable all strict type-checking options
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Module Resolution
    "moduleResolution": "node",
    "esModuleInterop": true, // needed if you want import/export syntax with CommonJS modules
    "resolveJsonModule": true, // if you import .json files
    "allowSyntheticDefaultImports": true,

    // Source Maps
    "sourceMap": true, // generate .map files
    "inlineSources": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
